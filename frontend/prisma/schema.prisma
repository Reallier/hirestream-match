// 与 INTJTech_04 共享同一个数据库
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  name            String?
  email           String?   @unique
  username        String?   @unique
  password        String?
  avatar          String?
  balance         Decimal   @default(0) @db.Decimal(12, 6)
  freeQuota       Decimal   @default(0) @map("free_quota") @db.Decimal(12, 6)
  role            String    @default("user")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  usageRecords    UsageRecord[]
  matchRecords    MatchRecord[]
  candidates      Candidate[]

  @@map("users")
}

model UsageRecord {
  id              Int       @id @default(autoincrement())
  userId          Int       @map("user_id")
  requestId       String    @map("request_id")
  operation       String
  model           String?
  promptTokens    Int       @default(0) @map("prompt_tokens")
  completionTokens Int      @default(0) @map("completion_tokens")
  cost            Decimal   @default(0) @db.Decimal(10, 6)
  createdAt       DateTime  @default(now()) @map("created_at")

  user            User      @relation(fields: [userId], references: [id])

  @@map("hm_usage_records")
}

model MatchRecord {
  id              Int       @id @default(autoincrement())
  userId          Int       @map("user_id")
  jdText          String    @map("jd_text")
  resumeText      String    @map("resume_text")
  resumeFilename  String?   @map("resume_filename")
  matchScore      Int       @map("match_score")
  reportJson      Json?     @map("report_json")
  promptTokens    Int       @default(0) @map("prompt_tokens")
  completionTokens Int      @default(0) @map("completion_tokens")
  cost            Decimal   @default(0) @db.Decimal(10, 6)
  createdAt       DateTime  @default(now()) @map("created_at")

  user            User      @relation(fields: [userId], references: [id])

  @@map("hm_match_records")
}

// 候选人（用户独立人才库）
model Candidate {
  id              Int       @id @default(autoincrement())
  userId          Int       @map("user_id")
  name            String?
  email           String?
  phone           String?
  location        String?
  currentTitle    String?   @map("current_title")
  currentCompany  String?   @map("current_company")
  yearsExperience Int?      @map("years_experience")
  skills          String[]
  resumeText      String?   @map("resume_text")
  resumeFilename  String?   @map("resume_filename")
  status          String    @default("active")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  user            User      @relation(fields: [userId], references: [id])

  @@map("candidates")
}

